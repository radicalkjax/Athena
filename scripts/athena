    echo -e "${TRANS_BLUE}${BOLD}Main Menu${NC}"
    echo -e "${TRANS_PINK}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${NC}"
