# API Keys for AI Models
OPENAI_API_KEY=your_openai_api_key_here
CLAUDE_API_KEY=your_claude_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# API Base URLs (optional, use if you need to override defaults)
# OPENAI_API_BASE_URL=https://api.openai.com/v1
# CLAUDE_API_BASE_URL=https://api.anthropic.com/v1
# DEEPSEEK_API_BASE_URL=https://api.deepseek.com/v1

# PostgreSQL Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=athena_db
DB_USER=postgres
DB_PASSWORD=your_db_password_here
DB_DIALECT=postgres

# pgAdmin Configuration (for Docker Compose)
PGADMIN_EMAIL=admin@athena.local
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# Redis Cache Configuration
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0
REDIS_KEY_PREFIX=athena:

# APM (Application Performance Monitoring) Configuration
APM_ENABLED=false
APM_PROVIDER=console  # Options: console, statsd, datadog, newrelic
# APM_ENDPOINT=http://localhost:8125  # For StatsD/DataDog
# APM_API_KEY=your_apm_api_key_here
APM_SAMPLE_RATE=1.0  # 1.0 = 100% sampling, 0.1 = 10% sampling

# Feature Flags Configuration
# In production, you can override feature flags using environment variables
# Format: FEATURE_<FLAG_NAME_IN_UPPERCASE>=true|false
# Array values should be comma-separated

# Cache Features
# FEATURE_ENABLEREDISCACHE=true
# FEATURE_ENABLEMEMORYCACHE=true
# FEATURE_CACHEANALYSISRESULTS=true

# Performance Features
# FEATURE_ENABLEAPM=true
# FEATURE_ENABLEPERFORMANCEMONITORING=true

# AI Service Features
# FEATURE_ENABLESTREAMINGANALYSIS=true
# FEATURE_ENABLEBATCHANALYSIS=true
# FEATURE_AIPROVIDERPRIORITY=claude,openai,deepseek
# FEATURE_ENABLEAIFAILOVER=true

# Resilience Features
# FEATURE_ENABLECIRCUITBREAKER=true
# FEATURE_ENABLEBULKHEAD=true
# FEATURE_ENABLEADAPTIVECIRCUITBREAKER=true

# Container Features
# FEATURE_ENABLECONTAINERISOLATION=true
# FEATURE_ENABLECONTAINERRESOURCELIMITS=true

# Analysis Features
# FEATURE_ENABLEMETASPLOITINTEGRATION=true
# FEATURE_ENABLELOCALMODELS=false
# FEATURE_ENABLEADVANCEDANALYSIS=true

# Storage Features
# FEATURE_ENABLEPERSISTENTSTORAGE=true
# FEATURE_ENABLEDATABASESTORAGE=true
