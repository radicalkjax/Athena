# AI Provider Keys
# Get your Claude API key from: https://console.anthropic.com/
CLAUDE_API_KEY=your-claude-api-key-here

# Get your DeepSeek API key from: https://platform.deepseek.com/
DEEPSEEK_API_KEY=your-deepseek-api-key-here

# Get your OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=athena_db
DB_USER=athena_admin
DB_PASSWORD=secure_password
DB_POOL_MAX=20

# Redis Configuration (optional - leave empty for default)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Server Configuration
PORT=3000
NODE_ENV=development

# Optional: Additional Configuration
LOG_LEVEL=info
METRICS_ENABLED=true
METRICS_PORT=9090

# Logging Configuration (ELK Stack)
LOGSTASH_HOST=localhost
LOGSTASH_PORT=5000

# WASM Configuration
DISABLE_WASM=false

# File Processing Limits
MAX_FILE_SIZE=52428800  # 50MB in bytes
FILE_UPLOAD_TIMEOUT=300000  # 5 minutes in milliseconds

# Security Settings
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# JWT Security Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-and-random
JWT_EXPIRY=24h

# API Key Security
ADMIN_API_KEY=admin-api-key-32-characters-minimum-secure-random-string
CLIENT_API_KEY=client-api-key-32-characters-minimum-secure-random-string
ANALYSIS_API_KEY=analysis-api-key-32-characters-minimum-secure-random-string

# CORS Security
CORS_ORIGIN=http://localhost:5173,http://localhost:3000,http://localhost:8080

# Additional Security Headers
ENFORCE_HTTPS=false  # Set to true in production
SECURITY_AUDIT_LOG=true